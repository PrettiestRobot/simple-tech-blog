<div class='container'>
  <div class='row'>
    <div class='col-md-8 offset-md-2 col-lg-6 offset-lg-3'>
      <form
        id='create-form'
        class='create-form shadow p-4 my-5 mx-auto bg-body rounded w-75 requires-validation'
        action='/api/posts/{{id}}/reviews'
        method='POST'
      >
        <h2 class='text-center'>Leave A Review For:
          <br />
          {{postName}}</h2>
        <label for='reviewContent' class='form-label'>Post Content</label>
        <textarea
          id='reviewContent'
          class='input-group has-validation'
          name='reviewContent'
          placeholder='Content'
          required
        ></textarea>
        <button
          class='btn btn-primary btn-lg w-100 mt-4 p-3'
          type='submit'
        >Create Post</button>
        <p class='text-center mt-3 mb-0'><a
            class='text-center mt-3 mb-0'
            href='/index'
          >Back to Homepage</a></p>
      </form>

    </div>
  </div>
</div>