<div class='container'>
  <div class='row'>
    <div class='col-md-8 offset-md-2 col-lg-6 offset-lg-3'>
      <form
        id='create-form'
        class='create-form shadow p-4 my-5 mx-auto bg-body rounded w-75 requires-validation'
        action='/api/posts'
        method='POST'
      >
        <h2 class='text-center'>Create New Post</h2>
        <label for='title' class='form-label'>Title</label>
        <input
          id='title'
          class='input-group has-validation'
          type='text'
          name='postName'
          placeholder='Title'
          required
        />
        <label for='content' class='form-label'>Post Content</label>
        <textarea
          id='content'
          class='input-group has-validation'
          name='postContent'
          placeholder='Content'
          required
        ></textarea>
        <button
          class='btn btn-primary btn-lg w-100 mt-4 p-3'
          type='submit'
        >Create Post</button>
        <p class='text-center mt-3 mb-0'><a
            class='text-center mt-3 mb-0'
            href='/dashboard'
          >Back to Dashboard</a></p>
      </form>

    </div>
  </div>
</div>